[Unit]
Description=Dorce.ai Backend
After=network.target

[Service]
Type=simple
WorkingDirectory=/srv/dorce.ai/apps/backend
Environment=PORT=4000
Environment=NODE_ENV=production
EnvironmentFile=/srv/dorce.ai/apps/backend/.env
ExecStart=/usr/bin/npm run start:prod
Restart=always
User=www-data
Group=www-data

[Install]
WantedBy=multi-user.target
