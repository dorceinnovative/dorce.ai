{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false
  },
  "include": [
    "src/main.ts",
    "src/app.module.ts",
    "src/health/**/*",
    "src/auth/**/*",
    "src/prisma/**/*",
    "src/routes/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*spec.ts",
    "src/neural-core/**/*",
    "src/security/**/*",
    "src/integration/**/*",
    "src/openrouter/**/*",
    "src/supabase/**/*",
    "src/trading/**/*",
    "src/upstash/**/*"
  ]
}